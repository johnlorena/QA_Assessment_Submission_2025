		{
			"name": "POST /posts (Create)",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"// Test 1: Check for the 201 Created status\r",
							"pm.test(\"Status code is 201 Created\", function () {\r",
							"    pm.response.to.have.status(201);\r",
							"});\r",
							"\r",
							"// Test 2: Check that the response contains a new 'id'\r",
							"pm.test(\"Response contains a new ID\", function () {\r",
							"    pm.expect(pm.response.json()).to.have.property('id');\r",
							"});\r",
							"\r",
							"// Test 3: Check that the returned title matches the sent title\r",
							"// Note: We access the sent data using pm.request.body\r",
							"pm.test(\"Returned title matches request title\", function () {\r",
							"    const responseBody = pm.response.json();\r",
							"    const requestBody = JSON.parse(pm.request.body.raw);\r",
							"    pm.expect(responseBody.title).to.equal(requestBody.title);\r",
							"});"
						],
						"type": "text/javascript",
						"packages": {}
					}
				}
			],
